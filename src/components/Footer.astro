---
const today = new Date();

interface Props {
  fixed?: boolean;
}

const { fixed } = Astro.props;
---

<footer
  style={fixed
    ? {
        position: "fixed",
        left: "50%",
        transform: "translateX(-50%)",
        bottom: 0,
      }
    : {}}
>
  &copy; {today.getFullYear()} Your name here. All rights reserved.
</footer>
<style>
  footer {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: var(--footer-height);
  }
</style>
