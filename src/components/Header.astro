---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

interface Props {
  background?: string;
}

const { background } = Astro.props;
---

<header transition:animate="none" style={background ? { background } : {}}>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/" data-astro-reload>Home</HeaderLink>
      <HeaderLink href="/notes/graph" data-astro-reload>Graph</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    position: relative;
    z-index: 2;
    width: 100%;
    height: var(--header-height);
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a [margin: 0;] h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    width: 100%;
    max-width: 720px;
    margin: auto;
  }
  nav a {
    padding: 0 0.5em;
    color: var(--nord0);
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    color: var(--nord10);
  }
</style>
